		<div id="top-bar" class="clearfix ng-cloak" ng-cloak>
			<div id="sphere-container"></div>
			<div class="logo"><img src="images/logo.png" /></div>
			<div class="navigator" ng-controller="navigatorController" ng-init="movePosition = 0; loginForm = false;">
				<ul>
					<li ng-mouseenter="movePosition = 0" ng-mouseout="movePosition = 0">首页</li><li ng-mouseenter="movePosition = 1" ng-mouseout="movePosition = 0">博文</li><li ng-mouseenter="movePosition = 2" ng-mouseout="movePosition = 0">github</li><li ng-mouseenter="movePosition = 3" ng-mouseout="movePosition = 0">关于我们</li>
